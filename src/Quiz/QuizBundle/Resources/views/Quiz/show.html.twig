{% extends "QuizQuizBundle::layout.html.twig" %}

{% block content %}
<h1>Quiz de Developpez.com</h1>
<h2>{{ quiz }}</h2>
{% set questions = quiz.getQuestion() %}
{% for question in questions %}
<section>
    <h1>{{ question.text }}</h1>
    <ul>
        {% for answer in question.getAnswer() %}
            <li>{{ answer }}</li>
        {% endfor %}
        <form action="{{ path('quizShow', {'id': quiz.getId(), 'slug': quiz.getSlug()}) }}" method="post" {{ form_enctype(form) }}>
            {{ form_errors(form) }}

            {{ form_rest(form) }}

            <input type="submit" />
        </form>
    </ul>
</section>
{% endfor %}
{% endblock %}